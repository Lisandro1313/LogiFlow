          }
        },
        {
          "name": "Update Order",
          "request": {
            "method": "PUT",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"status\": \"in_progress\",\n  \"agentId\": \"{{agent_id}}\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/orders/:id",
              "host": ["{{base_url}}"],
              "path": ["orders", ":id"],
              "variable": [
                {
                  "key": "id",
                  "value": "{{order_id}}"
                }
              ]
            }
          }
        },
        {
